alias diff=colordiff
alias please=sudo

GRC=$(command -v grc)
if [ -n ${GRC} ] && [ "$TERM" != dumb ]; then
  alias colourify="$GRC -es --colour=auto"
  alias configure='colourify ./configure'
  alias iptables="sudo ${GRC} -es --colour=auto iptables"
  grc_commands=(blkid df dig dnf docker docker-compose docker-machine du env \
                findmnt free g++ gcc getfacl getsebool go id ifconfig iostat \
                ip iwconfig journalctl kubectl last lastlog lsattr lsblk lsmod \
                lsof lspci mount mtr netstat nmap ntpdate ping ps pv sar \
                semanage showmount ss stat sysctl systemctl tcpdump traceroute \
                traceroute6 tune2fs ulimit uptime vmstat w wdiff who whois )
  for cmd in ${grc_commands[@]}; do
    command -v ${cmd} >/dev/null && alias "${cmd}"="colourify ${cmd}"
  done
fi
