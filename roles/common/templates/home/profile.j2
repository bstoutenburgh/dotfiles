#!/bin/sh

LOCAL_BIN="${HOME}/.local/bin"
[[ ":$PATH:" != *"${LOCAL_BIN}"* ]] && export PATH="${LOCAL_BIN}:${PATH}"

# Go
export PATH="$PATH:$HOME/go/bin"

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi
